<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>profile</title>
  </head>
  <body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <nav class="navbar navbar-expand-lg navbar-light bg-light " style="display: flex; justify-content: space-between;">
        <h1 id="icon" style="margin-left: 30px;
        font-size: 55px;
        color: blue;
        font-family: Arial, Helvetica, sans-serif;">facebook</h1>
        <div>
            <a class="btn btn-danger" href="/logout">logout</a>
            <a href="/allpost" class="btn btn-primary">allpost</a>
        </div>
      </nav>
   
   
   
      <div class="card" style="width: 12rem;">
        <img src="../images/uploads/<%=postdata.Profile[postdata.Profile.length-1]%>" class="card-img-top" alt="...">
        <div class="card-body">
          <a href="/allpictures/<%=postdata._id%>" class="btn btn-primary">All picture</a>
        </div>
      </div>

      <form action="/upload" method="post" enctype="multipart/form-data">
        <input type="file" name="picture" />
        <input type="submit">
      </form>
   
   
    <div class="container">
        <form action="/createpost" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Post</label>
                <input type="text" name="content" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text" style="width: 100%;">create your post</div>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">imageurl</label>
                <input type="text" name="imageurl" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text" style="width: 100%;">enter your image url</div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<div class="container">

    
    
    <%if(postdata.totalpost.length>0){%>
        <%postdata.totalpost.forEach(function(elem){%>
            <div class="card" style="width: 18rem; margin-top: 20px;">
                <img src="<%=elem.imageurl%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=postdata.name%>
                    </h5>
                    <p class="card-text">
                        <%=elem.content%>
                    </p>
                    <a href="/likes/<%=elem._id%>" class="btn btn-primary">Likes <%=elem.likes.length%></a>
                    <a href="/delete/<%=elem._id%>" class="btn btn-primary">Delete</a>
                    <a href="/update/<%=elem._id%>" class="btn btn-primary">update</a>
                </div>
            </div>
            <%})%>
                <%} else {%>

                    <h2 style="margin-top: 20px;">
                        No posts found
                    </h2>
                    <%}%>



  </body>
</html>