<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>facebook</title>
</head>

<body>
    <nav style="display: flex; justify-content: space-between;">
        <div id="one">
            <h1 style="font-size: 60px; font-family: Arial, Helvetica, sans-serif; color: blue; font-weight: 600;">facebook</h1>
        </div>
        <div id="two" style="padding-right: 20px;">
            <a href="/back" class="btn btn-danger">Back</a>
            <a href="/logout" class="btn btn-primary">logout</a>
        </div>

    </nav>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <%if(allpost.length>0){%>
        <%allpost.forEach(function(elem){%>
            <div class="card my-5" style="width: 20rem; margin: 0 auto;">
                <img src="<%=elem.imageurl%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        <%=elem.content%>
                    </p>
                    <a href="/likes/<%=elem._id%>" class="btn btn-primary">likes  <%=elem.likes.length%></a>
                <form method="post" style="margin-top: 20px;" action="/comments/<%=elem._id%>" >
                    <input type="text" name="comments" placeholder="comment here">
                    <input type="submit" value="Comment">

                </form>
                <p class="card-text">
                    <%if(elem.comment.length>0){%>                        
                       <% elem.comment.forEach(function(comm,index){%>
                        <%if(index<4){%>
                        <h4 class="card-text">
                            <%=comm.comments%>
                        </h4>
                        <form action="/reply/<%=elem._id%>" method="post">
<input type="text" name="reply" placeholder="reply">
<input type="submit" value="reply">
                        </form>
                        <%}%>
                      <% })%>
                        <%}else{%>
                       <h4>no comments</h4>
                       <%}%>
                       <%if(elem.comment.length>=4){%>
                     <a href="">viewmore</a>
                                                <%}%>     
                </p>
                </div>
            </div>
            <%})%>
                <%}else{%>
                    <h4>No more posts found</h4>
                    
                    <%}%>
</body>

</html>